Trig = ScUgen (
----------------------------

in: in dur: dur = (
    ^UgenBuilder name: 'Trig' numChan: 1 rateSpec: #(1) specialIndex: 0 inputArray: {in. dur}
)

in: in dur: dur mul: mul = (
    ^(Trig in: in dur: dur) * mul
)

in: in dur: dur mul: mul add: add = (
    ^(Trig in: in dur: dur) * mul + add
)

primaryFactoryMethod = (
    ^#in:dur:
)


comment = (^'
Timed trigger.
')


)
